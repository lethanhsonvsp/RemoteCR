@page "/"
@rendermode InteractiveServer

@using RemoteCR.Services.Modbus
@using RemoteCR.Services.Can

@inject TadaService BmuService
@inject CanStateContainer State
@inject DeltaChargerCommandService dccs

@implements IDisposable

<style>
    .status-dot {
        display: inline-block;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        margin-left: 10px;
    }

        .status-dot.online {
            background-color: #28a745;
            box-shadow: 0 0 8px #28a745;
        }

        .status-dot.offline {
            background-color: #dc3545;
            box-shadow: 0 0 8px #dc3545;
        }

    .grid-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    @@media (max-width: 992px) {
        .grid-container {
            grid-template-columns: 1fr;
        }
    }

    .card-block {
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 12px rgba(0,0,0,0.10);
    }
</style>

<h1 class="mb-4">🔋 Charger & Battery Dashboard</h1>

<div class="grid-container">

    <!-- ================================================= -->
    <!-- 🔷 LEFT : DELTA CHARGER -->
    <!-- ================================================= -->
    <div class="card-block">
        <h2 class="mb-2">Delta 1kW Wireless Charger</h2>

        <h4>
            <span class="status-dot @(State.IsConnected ? "online" : "offline")"></span>
            <span class="ms-2">
                @(State.IsConnected ? "Connected" : "Disconnected")
            </span>
        </h4>

        <hr />

        <h5>Electrical</h5>
        <p><b>Voltage:</b> @State.Voltage.ToString("F2") V</p>
        <p><b>Current:</b> @State.Current.ToString("F2") A</p>
        <p><b>Power:</b> @(State.Power.ToString("F1")) W</p>

        <h5 class="mt-3">Wireless</h5>
        <p><b>Gap:</b> @State.Gap mm</p>
        <p><b>Primary Temp:</b> @(State.PriTemp < 0 ? "???" : State.PriTemp + " °C")</p>
        <p><b>Secondary Temp:</b> @(State.SecTemp < 0 ? "???" : State.SecTemp + " °C")</p>

        <hr />

        <div class="input-group input-group-sm mb-2">
            <span class="input-group-text">Current (A)</span>
            <input type="number" class="form-control" @bind="current" />
            <span class="input-group-text">Voltage (V)</span>
            <input type="number" class="form-control" @bind="voltage" />
        </div>

        <div class="btn-group btn-group-sm">
            <button class="btn btn-success" @onclick="SendOnceOn">Once ON</button>
            <button class="btn btn-secondary" @onclick="SendOnceOff">Once OFF</button>
            <button class="btn btn-primary" @onclick="StartLoopOn">Start Loop</button>
            <button class="btn btn-warning" @onclick="StartLoopOff">Stop Loop</button>
        </div>

        @if (State.FaultFlags.HasFlag(ChargerFault.ChargerLocked))
        {
            <div class="alert alert-danger mt-3 fw-bold">
                🔒 Charger Locked
                <button class="btn btn-sm btn-light ms-2"
                        @onclick="ResetCharger">
                    Reset
                </button>
            </div>
        }
    </div>

    <!-- ================================================= -->
    <!-- 🔷 RIGHT : STATUS / FAULT / FW -->
    <!-- ================================================= -->
    <div class="card-block">

        @if (State.StatusFlags != ChargerStatus.None)
        {
            <div class="alert alert-info">
                <h5>Status</h5>
                <ul>
                    @foreach (var s in GetFlags(State.StatusFlags))
                    {
                        <li>@s</li>
                    }
                </ul>

                <div class="mt-2">
                    @if (State.StatusFlags.HasFlag(ChargerStatus.CC_Mode))
                    {
                        <span class="badge bg-success">CC</span>
                    }
                    @if (State.StatusFlags.HasFlag(ChargerStatus.CV_Mode))
                    {
                        <span class="badge bg-warning text-dark">CV</span>
                    }
                    @if (State.StatusFlags.HasFlag(ChargerStatus.Thermal_Derating))
                    {
                        <span class="badge bg-warning text-dark">Thermal Derating</span>
                    }
                </div>
            </div>
        }

        @if (State.FaultFlags != ChargerFault.None)
        {
            <div class="alert alert-danger">
                <h5>Faults</h5>
                <ul>
                    @foreach (var f in GetFlags(State.FaultFlags))
                    {
                        <li>@f</li>
                    }
                </ul>
            </div>
        }

        <div class="card p-3 mt-3">
            <h5>Firmware Versions</h5>
            <p><b>MCU1:</b> @State.RevMCU1</p>
            <p><b>MCU2:</b> @State.RevMCU2</p>
            <p><b>DSP:</b> @State.RevDSP</p>
        </div>

    </div>

</div>

@code {

    private Dictionary<string, double> data = new();
    private System.Threading.Timer? timer;

    private double voltage = 55.0;
    private double current = 5.0;

    protected override void OnInitialized()
    {
        State.OnChange += StateChanged;
    }

    private void StateChanged() => InvokeAsync(StateHasChanged);

    private IEnumerable<string> GetFlags(Enum flags)
    {
        foreach (Enum val in Enum.GetValues(flags.GetType()))
        {
            if (Convert.ToUInt32(val) == 0) continue;
            if (flags.HasFlag(val))
                yield return val.ToString();
        }
    }

    private void SendOnceOn() => dccs.SendOnce(voltage, current, true);

    private void SendOnceOff()
    {
        dccs.SendOnce(voltage, current, false);
        dccs.StopLoop();
    }

    private void StartLoopOn() => dccs.StartLoop(voltage, current, true);

    private void StartLoopOff()
    {
        dccs.StopLoop();
        dccs.SendOnce(voltage, current, false);
    }

    private async Task ResetCharger()
    {
        await dccs.ResetFaultsAndStartAsync(voltage, current);
    }

    public void Dispose()
    {
        State.OnChange -= StateChanged;
        timer?.Dispose();
    }
}
