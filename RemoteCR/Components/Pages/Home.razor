@page "/"
@rendermode InteractiveServer
@using RemoteCR.Services.Can
@inject CanStateContainer State
@inject DeltaChargerCommandService dccs
@implements IDisposable

<style>
    /* ================= HEADER ================= */
    .status-dot {
        display: inline-block;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        margin-right: 6px;
    }

        .status-dot.online {
            background: #28a745;
            box-shadow: 0 0 8px #28a745;
        }

        .status-dot.offline {
            background: #dc3545;
            box-shadow: 0 0 8px #dc3545;
        }

    /* ================= GRID 1x3 ================= */
    .gui {
        display: grid;
        grid-template-columns: 1fr 1fr 2fr;
        gap: 12px;
    }

    /* ================= CARD ================= */
    .card {
        background: #fff;
        border-radius: 8px;
        padding: 10px 12px;
        box-shadow: 0 0 8px rgba(0,0,0,.12);
        margin-bottom: 10px;
    }

    .title {
        font-weight: 600;
        font-size: .95rem;
        margin-bottom: 6px;
    }

    /* ================= ROW ================= */
    .row {
        display: grid;
        grid-template-columns: 140px 1fr;
        align-items: center;
        column-gap: 6px;
        font-size: .85rem;
    }

        .row span {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .row div {
            text-align: right;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    /* ================= STATUS / FAULT ================= */
    .chk {
        display: grid;
        grid-template-columns: 16px 1fr;
        column-gap: 6px;
        align-items: center;
        font-size: .85rem;
    }

        .chk input {
            pointer-events: none;
        }

    .on {
        color: #28a745;
        font-weight: 600;
    }

    .warn {
        color: #ffc107;
        font-weight: 600;
    }

    .fault {
        color: #dc3545;
        font-weight: 600;
    }

    .off {
        color: #888;
    }

    /* ================= CAN MONITOR ================= */
    .can-filter {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        font-size: .8rem;
        margin-bottom: 6px;
    }

        .can-filter label {
            cursor: pointer;
            user-select: none;
        }

    .can-log {
        height: 470px;
        background: #111;
        color: #0f0;
        font-family: monospace;
        font-size: .8rem;
        padding: 8px;
        overflow-y: auto;
        border-radius: 6px;
    }

    .can-line {
        white-space: pre;
    }
</style>

<h2 class="mb-2">Delta 1kW Wireless Charger</h2>
<h5 class="mb-3">
    <span class="status-dot @(State.IsConnected ? "online" : "offline")"></span>
    @(State.IsConnected ? "Connected" : "Disconnected")
</h5>

<div class="gui">

    <!-- ================= COLUMN 1 ================= -->
    <div>
        <!-- Block 3 -->
        <div class="card">
            <div class="title">Set Point Control</div>

            <div class="row">
                <span>Current (A)</span>
                <div><input type="number" @bind="current" style="width:80px" /></div>
            </div>

            <div class="row">
                <span>Voltage (V)</span>
                <div><input type="number" @bind="voltage" style="width:80px" /></div>
            </div>

            <div class="mt-2">
                <button class="btn btn-success btn-sm" @onclick="SendOnceOn">Once ON</button>
                <button class="btn btn-secondary btn-sm ms-1" @onclick="SendOnceOff">Once OFF</button>
            </div>

            <div class="mt-1">
                <button class="btn btn-primary btn-sm" @onclick="StartLoopOn">Start Loop</button>
                <button class="btn btn-warning btn-sm ms-1" @onclick="StartLoopOff">Stop Loop</button>
                <button class="btn btn-warning btn-sm ms-1" @onclick="Clear">ClearFault</button>
            </div>
        </div>

        <!-- Block 4 -->
        <div class="card">
            <div class="title">Measurements</div>

            <div class="row"><span>Voltage</span><div>@State.Voltage.ToString("F1") V</div></div>
            <div class="row"><span>Current</span><div>@State.Current.ToString("F1") A</div></div>
            <div class="row"><span>Power</span><div>@State.Power.ToString("F1") W</div></div>

            <hr />

            <div class="row"><span>AC Voltage</span><div>@State.AcVoltage V</div></div>
            <div class="row"><span>AC Current</span><div>@State.AcCurrent A</div></div>
            <div class="row"><span>AC Power</span><div>@State.AcPower W</div></div>
            <div class="row"><span>AC Freq</span><div>@State.AcFreq Hz</div></div>

            <hr />

            <div class="row"><span>Gap</span><div>@State.Gap mm</div></div>
            <div class="row"><span>Temp Pri</span><div>@State.PriTemp °C</div></div>
            <div class="row"><span>Temp Sec</span><div>@State.SecTemp °C</div></div>
        </div>
    </div>

    <!-- ================= COLUMN 2 ================= -->
    <div>
        <!-- Block 5 -->
        <div class="card">
            <div class="title">Status</div>
            @Chk("WirelessComm", State.GUI_WirelessComm)
            @Chk("StatusPower", State.GUI_StatusPower)
            @Chk("PowerDerating", State.GUI_PowerDerating, "warn")
            @Chk("Fault", State.GUI_Fault, "fault")
            @Chk("Alert_AC", State.GUI_AlertAC, "warn")
            @Chk("MemoryCorruption", State.GUI_MemoryCorruption, "fault")
        </div>

        <!-- Block 6 -->
        <div class="card">
            <div class="title">Faults</div>
            @Fault("OCP_SW", ChargerFault.OCP)
            @Fault("OTP_SW", ChargerFault.OTP_Primary)
            @Fault("OVP_HW", ChargerFault.OVP)
            @Fault("OVP_SW", ChargerFault.OVP)
            @Fault("WD_Comm", ChargerFault.CommTimeout)
            @Fault("WD_Reset", ChargerFault.SafetyStop)
            @Fault("OverGap", ChargerFault.GapTooHigh, "warn")
        </div>

        <!-- Block 7 -->
        <div class="card">
            <div class="title">Version</div>
            <div class="row"><span>SEC</span><div>@State.RevMCU1</div></div>
            <div class="row"><span>IPT</span><div>@State.RevMCU2</div></div>
            <div class="row"><span>PFC</span><div>@State.RevDSP</div></div>
        </div>
    </div>

    <!-- ================= COLUMN 3 ================= -->
    <div>
        <!-- Block 8 : CAN Monitor -->
        <div class="card">
            <div class="title">Output Measure (CAN Monitor)</div>

            <!-- FILTER -->
            <div class="can-filter">
                @foreach (var id in KnownIds)
                {
                    <label>
                        <input type="checkbox"
                               checked="@EnabledIds.Contains(id)"
                               @onchange="e => ToggleId(id, e)" />
                        @id.ToString("X3")
                    </label>
                }
            </div>

            <!-- LOG -->
            <div class="can-log">
                @foreach (var f in FilteredFrames)
                {
                    <div class="can-line">
                        can0  @f.Id.ToString("X3")  [@f.Dlc]  @f.Hex
                    </div>
                }
            </div>
            <select class="form-select form-select-sm">
                <option>100ms</option>
                <option selected>500ms</option>
                <option>1000ms</option>
            </select>
            <div class="form-check mt-1">
                <input class="form-check-input" type="checkbox" />
                <label class="form-check-label">Record</label>
            </div>
        </div>
    </div>

</div>

@code {
    double voltage = 60;
    double current = 4;

    // ===== STATUS / FAULT UI =====
    RenderFragment Chk(string t, bool v, string c = "on")
        => @<div class="chk @(v? c : "off")">
        <input type="checkbox" checked="@v" />@t
    </div>;

    RenderFragment Fault(string t, ChargerFault f, string c = "fault")
        => @<div class="chk @(State.FaultFlags.HasFlag(f) ? c : "off")">
        <input type="checkbox" checked="@State.FaultFlags.HasFlag(f)" />@t
    </div>;

    // ===== COMMAND =====
    void SendOnceOn() => dccs.SendOnce(voltage, current, true);

    void SendOnceOff()
    {
        dccs.SendOnce(voltage, current, false);
        dccs.StopLoop();
    }

    void StartLoopOn() => dccs.StartLoop(voltage, current, true);

    void StartLoopOff()
    {
        dccs.StopLoop();
        dccs.SendOnce(voltage, current, false);
    }

    void Clear() => dccs.Send190(voltage, current, true, true);

    // ===== CAN MONITOR =====
    HashSet<uint> EnabledIds = new()
    {
        0x311, 0x321, 0x771, 0x5F1
    };

    uint[] KnownIds =
    {
        0x311, 0x321, 0x3C1, 0x3E1, 0x3F1,
        0x521, 0x5F1, 0x771
    };

    IEnumerable<CanFrame> FilteredFrames =>
        State.Frames
             .Where(f => EnabledIds.Contains(f.Id & 0x7FF))
             .TakeLast(150);

    void ToggleId(uint id, ChangeEventArgs e)
    {
        bool on = (bool)e.Value!;
        if (on) EnabledIds.Add(id);
        else EnabledIds.Remove(id);
    }

    protected override void OnInitialized()
        => State.OnChange += StateHasChanged;

    public void Dispose()
        => State.OnChange -= StateHasChanged;
}
