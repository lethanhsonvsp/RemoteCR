@page "/"
@rendermode InteractiveServer

@using RemoteCR.Services.Can
@inject CanSocketReaderService Reader
@inject CanSocketWriterService Writer
@inject SocketCan Can
@implements IDisposable

<style>
    .status-dot {
        width: 14px;
        height: 14px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 6px;
    }

    .online {
        background: #28a745;
        box-shadow: 0 0 8px #28a745;
    }

    .offline {
        background: #dc3545;
        box-shadow: 0 0 8px #dc3545;
    }

    .gui {
        display: grid;
        grid-template-columns: 1fr 1fr 1.6fr;
        gap: 10px;
    }

    .card {
        background: #fff;
        border-radius: 8px;
        padding: 10px 12px;
        box-shadow: 0 0 8px rgba(0,0,0,.12);
        margin-bottom: 10px;
    }

    .title {
        font-weight: 600;
        font-size: .9rem;
        margin-bottom: 6px;
    }

    .row {
        display: grid;
        grid-template-columns: 130px 1fr;
        font-size: .8rem;
        align-items: center;
    }

        .row div {
            text-align: right;
            white-space: nowrap;
        }

    .chk {
        display: grid;
        grid-template-columns: 16px 1fr;
        gap: 6px;
        font-size: .8rem;
    }

    .on {
        color: #28a745;
        font-weight: 600;
    }

    .warn {
        color: #ffc107;
        font-weight: 600;
    }

    .fault {
        color: #dc3545;
        font-weight: 600;
    }

    .off {
        color: #999;
    }
</style>

<h3>⚡ Wireless Charger Dashboard</h3>

<h5>
    <span class="status-dot @(IsConnected ? "online" : "offline")"></span>
    @(IsConnected ? "Connected" : "Disconnected")
</h5>

<div class="gui">

    <!-- ================= COLUMN 1 ================= -->
    <div>

        <!-- ===== SET POINT ===== -->
        <div class="card">
            <div class="title">Set Point Control</div>

            <div class="row">
                <span>Voltage (V)</span>
                <div>
                    <input type="number" step="0.5"
                           value="@SetVoltage"
                           @onchange="e => SetVoltage = double.Parse(e.Value!.ToString()!)"
                           style="width:80px" />
                </div>
            </div>

            <div class="row">
                <span>Current (A)</span>
                <div>
                    <input type="number" step="0.5"
                           value="@SetCurrent"
                           @onchange="e => SetCurrent = double.Parse(e.Value!.ToString()!)"
                           style="width:80px" />
                </div>
            </div>

            <div class="mt-2">
                <button @onclick="PowerOn" disabled="@(!CanPowerOn || PowerEnable)">
                    Power ON
                </button>

                <button @onclick="PowerOff" disabled="@(!PowerEnable)">
                    Power OFF
                </button>

                <button @onclick="ClearFault" disabled="@(!IsConnected)">
                    Clear Fault
                </button>
            </div>
        </div>

        <!-- ===== MEASUREMENTS + AC ===== -->
        <div class="card">
            <div class="title">Measurements</div>

            <div class="row @(HasData ? "on" : "off")">
                <span>Voltage</span>
                <div>@Fmt(Reader.Model?.Voltage_V) V</div>
            </div>

            <div class="row @(Reader.Model?.Current_A > 0.1 ? "on" : "off")">
                <span>Current</span>
                <div>@Fmt(Reader.Model?.Current_A) A</div>
            </div>

            <div class="row">
                <span>Power</span>
                <div>@Fmt(Power) W</div>
            </div>

            <hr />

            <div class="row @(Reader.Model?.Ac != null ? "on" : "off")">
                <span>AC Voltage</span>
                <div>@Fmt(Reader.Model?.Ac?.Voltage_V) V</div>
            </div>

            <div class="row @(Reader.Model?.Ac != null ? "on" : "off")">
                <span>AC Current</span>
                <div>@Fmt(Reader.Model?.Ac?.Current_A) A</div>
            </div>

            <div class="row @(Reader.Model?.Ac != null ? "on" : "off")">
                <span>AC Freq</span>
                <div>@Fmt(Reader.Model?.Ac?.Frequency_Hz) Hz</div>
            </div>
        </div>

        <!-- ===== GAP & TEMP ===== -->
        <div class="card">
            <div class="title">Gap & Temperature</div>

            <div class="row @GapClass"><span>Gap</span><div>@Fmt(Reader.Model?.Wireless?.Gap_mm) mm</div></div>
            <div class="row @TempPriClass"><span>Temp Primary</span><div>@Fmt(Reader.Model?.Temperature?.Primary_C) °C</div></div>
            <div class="row @TempSecClass"><span>Temp Secondary</span><div>@Fmt(Reader.Model?.Temperature?.Secondary_C) °C</div></div>
        </div>

    </div>

    <!-- ================= COLUMN 2 ================= -->
    <div>

        <div class="card">
            <div class="title">Status & Fault</div>

            @BoolState("AC Present", Reader.Model?.Ac != null)
            @BoolState("Charging", IsCharging)
            @BoolState("Wireless OK", Reader.Model?.WirelessStatusReport?.WirelessOk == true)

            @FaultState("Fault", Reader.Model?.Fault == true)
            @FaultState("OCP", Reader.Model?.Status?.Ocp == true)
            @FaultState("OVP", Reader.Model?.Status?.Ovp == true)
            @FaultState("Watchdog", Reader.Model?.Status?.Watchdog == true)
        </div>

        <div class="card">
            <div class="title">Charging Checklist</div>

            <div class="row @(SetCurrent > 0 ? "on" : "fault")">
                <span>Demand Current</span>
                <div>@SetCurrent A</div>
            </div>

            <div class="row @(Reader.Model?.Wireless?.Gap_mm <= 12 ? "on" : "fault")">
                <span>Gap</span>
                <div>@Fmt(Reader.Model?.Wireless?.Gap_mm) mm</div>
            </div>

            <div class="row @(Reader.Model?.WirelessStatusReport?.WirelessOk == true ? "on" : "fault")">
                <span>Wireless OK</span>
                <div>@(Reader.Model?.WirelessStatusReport?.WirelessOk == true ? "YES" : "NO")</div>
            </div>

            <div class="row @(Reader.Model?.Ac != null ? "on" : "fault")">
                <span>AC</span>
                <div>@(Reader.Model?.Ac != null ? "OK" : "NO")</div>
            </div>
        </div>

    </div>

    <!-- ================= COLUMN 3 ================= -->
    <div>

        <div class="card">
            <div class="title">Wireless Communication</div>

            <div class="row"><span>Channel</span><div>@Reader.Model?.CommInfo?.Channel</div></div>
            <div class="row"><span>Comm ID</span><div>@Reader.Model?.CommInfo?.CommId</div></div>
            <div class="row @CommQualityClass">
                <span>Success Rate</span>
                <div>@FmtPct(Reader.Model?.CommInfo?.SuccessRate)</div>
            </div>
        </div>

    </div>
</div>

@code {
    // ===== UI BUFFER =====
    double SetVoltage = 54;
    double SetCurrent = 10;

    bool PowerEnable = false;

    bool IsConnected => Can.IsConnected;
    bool HasData => Reader.Model != null;
    bool IsCharging => Reader.Model?.Charging == true;
    double Power => (Reader.Model?.Voltage_V ?? 0) * (Reader.Model?.Current_A ?? 0);

    bool CanPowerOn =>
        IsConnected &&
        SetCurrent > 0 &&
        Reader.Model?.WirelessStatusReport?.WirelessOk == true &&
        Reader.Model?.Wireless?.Gap_mm <= 12 &&
        Reader.Model?.Ac != null;

    protected override void OnInitialized()
    {
        // đảm bảo trạng thái idle an toàn
        Writer.Update(cmd =>
        {
            cmd.PowerEnable = false;
            cmd.PowerStage1 = false;
            cmd.DemandCurrent_A = 0;
        });

        Reader.OnChange += Refresh;
    }

    void Refresh() => InvokeAsync(StateHasChanged);
    public void Dispose() => Reader.OnChange -= Refresh;

    async Task PowerOn()
    {
        if (!CanPowerOn)
            return;

        PowerEnable = true;

        // STEP 1: clear fault
        Writer.Update(cmd =>
        {
            cmd.ClearFaults = true;
            cmd.PowerEnable = false;
            cmd.PowerStage1 = false;
        });

        await Task.Delay(300);

        // STEP 2: enable power with UI V/I
        Writer.Update(cmd =>
        {
            cmd.ClearFaults = false;
            cmd.DemandVoltage_V = SetVoltage;
            cmd.DemandCurrent_A = SetCurrent;
            cmd.PowerEnable = true;     // bit 20
            cmd.PowerStage1 = true;
        });
    }

    void PowerOff()
    {
        PowerEnable = false;

        Writer.Update(cmd =>
        {
            cmd.PowerEnable = false;
            cmd.PowerStage1 = false;
            cmd.DemandCurrent_A = 0; // an toàn
        });
    }

    async Task ClearFault()
    {
        Writer.Update(cmd => cmd.ClearFaults = true);
        await Task.Delay(200);
        Writer.Update(cmd => cmd.ClearFaults = false);
    }

    RenderFragment BoolState(string t, bool v)
        => @<div class="chk @(v ? "on" : "off")">
        <input type="checkbox" checked="@v" disabled />
        <span>@t</span>
    </div>;

    RenderFragment FaultState(string t, bool f)
        => @<div class="chk @(f ? "fault" : "off")">
        <input type="checkbox" checked="@f" disabled />
        <span>@t</span>
    </div>
    ;

    string GapClass => Reader.Model?.Wireless?.Gap_mm switch
    {
        null => "off",
        > 20 => "fault",
        > 12 => "warn",
        _ => "on"
    };

    string TempPriClass => Reader.Model?.Temperature?.Primary_C switch
    {
        null => "off",
        > 90 => "fault",
        > 75 => "warn",
        _ => "on"
    };

    string TempSecClass => Reader.Model?.Temperature?.Secondary_C switch
    {
        null => "off",
        > 90 => "fault",
        > 75 => "warn",
        _ => "on"
    };

    string CommQualityClass => Reader.Model?.CommInfo?.SuccessRate switch
    {
        null => "off",
        < 0.90 => "fault",
        < 0.97 => "warn",
        _ => "on"
    };

    string Fmt(double? v) => v.HasValue ? v.Value.ToString("F1") : "--";
    string FmtPct(double? v) => v.HasValue ? (v.Value * 100).ToString("F1") : " %";
}
