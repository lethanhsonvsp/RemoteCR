@page "/"
@rendermode InteractiveServer

@using RemoteCR.Services.Can
@inject CanSocketReaderService Reader
@inject CanSocketWriterService Writer
@inject SocketCan Can

<style>
    .status-dot {
        width: 14px;
        height: 14px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 6px;
    }

    .online {
        background: #28a745;
        box-shadow: 0 0 8px #28a745;
    }

    .offline {
        background: #dc3545;
        box-shadow: 0 0 8px #dc3545;
    }

    .gui {
        display: grid;
        grid-template-columns: 0.9fr 1.3fr 1fr;
        gap: 12px;
    }

    .card {
        background: #fff;
        border-radius: 8px;
        padding: 10px 12px;
        box-shadow: 0 0 8px rgba(0,0,0,.12);
        margin-bottom: 10px;
    }

    .title {
        font-weight: 600;
        font-size: .9rem;
        margin-bottom: 6px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 4px;
    }

    .row {
        display: grid;
        grid-template-columns: 150px 1fr;
        font-size: .8rem;
        align-items: center;
        margin: 2px 0;
    }

        .row div {
            text-align: right;
            white-space: nowrap;
        }

    .chk {
        display: grid;
        grid-template-columns: 16px 1fr;
        gap: 6px;
        font-size: .8rem;
        align-items: center;
        margin: 2px 0;
    }

    .on {
        color: #28a745;
        font-weight: 600;
    }

    .warn {
        color: #ffc107;
        font-weight: 600;
    }

    .fault {
        color: #dc3545;
        font-weight: 600;
    }

    .off {
        color: #999;
    }
</style>

<h3>⚡ Wireless Charger Dashboard</h3>
<h5>
    <span class="status-dot @(IsConnected ? "online" : "offline")"></span>
    @(IsConnected ? "Connected" : "Disconnected")
</h5>

<div class="gui">

    <!-- ================= COLUMN 1 – CONTROL ================= -->
    <div>

        <div class="card">
            <div class="title">Set Point Control</div>

            <div class="row">
                <span>Voltage (V)</span>
                <div>
                    <input type="number" step="0.5" style="width:80px"
                           value="@SetVoltage"
                           @onchange="e => SetVoltage = double.Parse(e.Value!.ToString()!)" />
                </div>
            </div>

            <div class="row">
                <span>Current (A)</span>
                <div>
                    <input type="number" step="0.5" style="width:80px"
                           value="@SetCurrent"
                           @onchange="e => SetCurrent = double.Parse(e.Value!.ToString()!)" />
                </div>
            </div>

            <div class="mt-2">
                <button @onclick="PowerOn" disabled="@(!CanPowerOn || PowerEnable)">Power ON</button>
                <button @onclick="PowerOff" disabled="@(!PowerEnable)">Power OFF</button>
                <button @onclick="ClearFault" disabled="@(!IsConnected)">Clear Fault</button>
            </div>
        </div>

        <div class="card">
            <div class="title">TX Command (0x191)</div>
            <div class="row"><span>Demand Voltage</span><div>@SetVoltage V</div></div>
            <div class="row"><span>Demand Current</span><div>@SetCurrent A</div></div>
            <div class="row"><span>Power Enable</span><div class="@(PowerEnable ? "on" : "off")">@(PowerEnable ? "ON" : "OFF")</div></div>
        </div>

        <div class="card">
            <div class="title">DC Measurements</div>
            <div class="row"><span>Voltage</span><div>@Fmt(Reader.Model?.Voltage_V) V</div></div>
            <div class="row"><span>Current</span><div>@Fmt(Reader.Model?.Current_A) A</div></div>
            <div class="row"><span>Power</span><div>@Fmt(Power) W</div></div>
        </div>

        <div class="card">
            <div class="title">AC Input</div>
            <div class="row"><span>Voltage</span><div>@Fmt(Reader.Model?.Ac?.Voltage_V) V</div></div>
            <div class="row"><span>Current</span><div>@Fmt(Reader.Model?.Ac?.Current_A) A</div></div>
            <div class="row"><span>Frequency</span><div>@Fmt(Reader.Model?.Ac?.Frequency_Hz) Hz</div></div>
        </div>

        <div class="card">
            <div class="title">Wireless</div>
            <div class="row @GapClass"><span>Gap</span><div>@Fmt(Reader.Model?.Wireless?.Gap_mm) mm</div></div>
            <div class="row"><span>Efficiency</span><div>@Fmt(Reader.Model?.Wireless?.Efficiency_pct) %</div></div>
        </div>
    </div>

    <!-- ================= COLUMN 2 – STATUS / RX ================= -->
    <div>

        <div class="card">
            <div class="title">Charger State (RX)</div>
            <div class="row">
                <span>State</span>
                <div>@Reader.Model?.Status?.State <span class="off">(@ChargerStateHint)</span></div>
            </div>
            @Bool("Charging", Reader.Model?.Charging == true)
            @Bool("Wireless OK", Reader.Model?.WirelessStatusReport?.WirelessOk == true)
            @Bool("Under Current", Reader.Model?.WirelessStatusReport?.UnderCurrent == true)
        </div>

        <div class="card">
            <div class="title">Faults</div>
            @Fault("Any Fault", Reader.Model?.Fault == true)
            @Fault("OCP", Reader.Model?.Status?.Ocp == true)
            @Fault("OVP", Reader.Model?.Status?.Ovp == true)
            @Fault("Watchdog", Reader.Model?.Status?.Watchdog == true)
        </div>

        <div class="card">
            <div class="title">Temperature</div>
            <div class="row @TempSecClass"><span>Secondary</span><div>@Fmt(Reader.Model?.Temperature?.Secondary_C) °C</div></div>
            <div class="row @TempPriClass"><span>Primary</span><div>@Fmt(Reader.Model?.Temperature?.Primary_C) °C</div></div>
        </div>

        <div class="card">
            <div class="title">Communication</div>
            <div class="row"><span>Channel</span><div>@Reader.Model?.CommInfo?.Channel</div></div>
            <div class="row"><span>Comm ID</span><div>@Reader.Model?.CommInfo?.CommId</div></div>
            <div class="row @CommQualityClass"><span>Success Rate</span><div>@FmtPct(Reader.Model?.CommInfo?.SuccessRate)</div></div>
        </div>

        <div class="card">
            <div class="title">Configuration</div>
            <div class="row"><span>Serial</span><div>@Reader.Model?.ConfigA?.SerialNumber</div></div>
            <div class="row"><span>MCU Role</span><div>@McuRole</div></div>
            <div class="row"><span>SW</span><div>@($"{Reader.Model?.ConfigA?.SwMajor}.{Reader.Model?.ConfigA?.SwMinor}")</div></div>
            <div class="row"><span>HW</span><div>@($"{Reader.Model?.ConfigB?.HwMajor}.{Reader.Model?.ConfigB?.HwMinor}")</div></div>
            <div class="row"><span>CAN Baud</span><div>@Reader.Model?.CanBaud</div></div>
        </div>

    </div>

    <!-- ================= COLUMN 3 – CHECKLIST / 191 ================= -->
    <div>

        <div class="card">
            <div class="title">191 Send Checklist</div>
            @Check("CAN Connected", IsConnected)
            @Check("Demand Current > 0", SetCurrent > 0)
            @Check("Wireless OK", Reader.Model?.WirelessStatusReport?.WirelessOk == true)
            @Check("Gap ≤ 12 mm", Reader.Model?.Wireless?.Gap_mm <= 12)
            @Check("AC Present", Reader.Model?.Ac != null)
            @Check("No Fault", Reader.Model?.Fault != true)
        </div>

        <div class="card">
            <div class="title">191 Result (TX → RX)</div>
            <div class="row"><span>Last TX</span><div>@(_lastTx191?.ToLocalTime().ToString("HH:mm:ss") ?? "--")</div></div>
            <div class="row"><span>Requested</span><div>@(_txRequestedPowerOn ? "POWER ON" : "POWER OFF")</div></div>
            <div class="row"><span>RX State</span><div>@Reader.Model?.Status?.State</div></div>
            <div class="row @Tx191ResultClass"><span>Result</span><div>@Tx191Result</div></div>
        </div>

    </div>

</div>

@code {
    double SetVoltage = 54;
    double SetCurrent = 10;
    bool PowerEnable;

    DateTime? _lastTx191;
    bool _txRequestedPowerOn;

    bool IsConnected => Can.IsConnected;
    double Power => (Reader.Model?.Voltage_V ?? 0) * (Reader.Model?.Current_A ?? 0);

    bool CanPowerOn =>
        IsConnected &&
        SetCurrent > 0 &&
        Reader.Model?.WirelessStatusReport?.WirelessOk == true &&
        Reader.Model?.Wireless?.Gap_mm <= 12 &&
        Reader.Model?.Ac != null;

    protected override void OnInitialized()
    {
        Reader.OnChange += () => InvokeAsync(StateHasChanged);
    }

    async Task PowerOn()
    {
        if (!CanPowerOn) return;
        _txRequestedPowerOn = true;
        _lastTx191 = DateTime.UtcNow;
        PowerEnable = true;

        Writer.Update(c => c.ClearFaults = true);
        await Task.Delay(300);
        Writer.Update(c =>
        {
            c.ClearFaults = false;
            c.DemandVoltage_V = SetVoltage;
            c.DemandCurrent_A = SetCurrent;
            c.PowerEnable = true;
            c.PowerStage1 = true;
        });
    }

    void PowerOff()
    {
        _txRequestedPowerOn = false;
        _lastTx191 = DateTime.UtcNow;
        PowerEnable = false;
        Writer.Update(c =>
        {
            c.PowerEnable = false;
            c.PowerStage1 = false;
            c.DemandCurrent_A = 0;
        });
    }

    async Task ClearFault()
    {
        Writer.Update(c => c.ClearFaults = true);
        await Task.Delay(200);
        Writer.Update(c => c.ClearFaults = false);
    }

    string Tx191Result =>
        _lastTx191 == null ? "--" :
        (DateTime.UtcNow - _lastTx191.Value).TotalMilliseconds < 500 ? "WAITING RX…" :
        _txRequestedPowerOn && Reader.Model?.Status?.State == ChargerState.Charging ? "✅ ACCEPTED" :
        _txRequestedPowerOn && Reader.Model?.Status?.State == ChargerState.Standby ? "❌ REJECTED" :
        Reader.Model?.Status?.State == ChargerState.Fault ? "❌ FAULT" :
        "UNKNOWN";

    string Tx191ResultClass =>
        Tx191Result.StartsWith("✅") ? "on" :
        Tx191Result.StartsWith("❌") ? "fault" : "warn";

    RenderFragment Bool(string t, bool v) => @<div class="chk @(v ? "on" : "off")"><input type="checkbox" checked="@v" disabled /><span>@t</span></div>;
    RenderFragment Fault(string t, bool v) => @<div class="chk @(v ? "fault" : "off")"><input type="checkbox" checked="@v" disabled /><span>@t</span></div>;
    RenderFragment Check(string t, bool v) => @<div class="chk @(v ? "on" : "fault")"><input type="checkbox" checked="@v" disabled /><span>@t</span></div>;

    string GapClass => Reader.Model?.Wireless?.Gap_mm switch { null => "off", > 20 => "fault", > 12 => "warn", _ => "on" };
    string TempPriClass => Reader.Model?.Temperature?.Primary_C switch { null => "off", > 90 => "fault", > 75 => "warn", _ => "on" };
    string TempSecClass => Reader.Model?.Temperature?.Secondary_C switch { null => "off", > 90 => "fault", > 75 => "warn", _ => "on" };
    string CommQualityClass => Reader.Model?.CommInfo?.SuccessRate switch { null => "off", < 0.90 => "fault", < 0.97 => "warn", _ => "on" };

    string McuRole => Reader.Model?.ConfigA?.McuId switch
    {
        0 => "Secondary MCU",
        1 => "Primary MCU",
        2 => "PFC MCU",
        _ => "--"
    };

    string ChargerStateHint => Reader.Model?.Status?.State switch
    {
        ChargerState.Uninit => "Pads not paired",
        ChargerState.Standby => "Waiting Power ON",
        ChargerState.Charging => "Charging",
        ChargerState.Fault => "Fault active",
        _ => "--"
    };

    string Fmt(double? v) => v.HasValue ? v.Value.ToString("F1") : "--";
    string FmtPct(double? v) => v.HasValue ? (v.Value * 100).ToString("F1") + " %" : "--";
    string FmtHour(uint? s) => s.HasValue ? (s.Value / 3600.0).ToString("F1") + " h" : "--";
}
