@page "/"
@rendermode InteractiveServer

@using RemoteCR.Services.Can
@inject CanSocketReaderService Reader
@inject CanSocketWriterService Writer
@inject SocketCan Can
@implements IDisposable

<style>
    .status-dot {
        display: inline-block;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        margin-right: 6px;
    }

        .status-dot.online {
            background: #28a745;
            box-shadow: 0 0 8px #28a745;
        }

        .status-dot.offline {
            background: #dc3545;
            box-shadow: 0 0 8px #dc3545;
        }

    .gui {
        display: grid;
        grid-template-columns: 1fr 1fr 1.6fr;
        gap: 10px;
    }

    .card {
        background: #fff;
        border-radius: 8px;
        padding: 10px 12px;
        box-shadow: 0 0 8px rgba(0,0,0,.12);
        margin-bottom: 10px;
    }

    .title {
        font-weight: 600;
        font-size: .9rem;
        margin-bottom: 6px;
    }

    .row {
        display: grid;
        grid-template-columns: 130px 1fr;
        font-size: .8rem;
        align-items: center;
    }

        .row div {
            text-align: right;
            white-space: nowrap;
        }

    .chk {
        display: grid;
        grid-template-columns: 16px 1fr;
        font-size: .8rem;
        align-items: center;
        gap: 6px;
    }

    .on {
        color: #28a745;
        font-weight: 600;
    }

    .warn {
        color: #ffc107;
        font-weight: 600;
    }

    .fault {
        color: #dc3545;
        font-weight: 600;
    }

    .off {
        color: #999;
    }

    /* ===== TOOLTIP (HOVER TEXT) ===== */
    .label {
        position: relative;
        cursor: help;
        border-bottom: 1px dotted #aaa;
    }

        .label:hover::after {
            content: attr(data-desc);
            position: absolute;
            left: 0;
            top: 120%;
            background: #333;
            color: #fff;
            padding: 6px 8px;
            font-size: .75rem;
            border-radius: 4px;
            white-space: nowrap;
            z-index: 100;
            box-shadow: 0 2px 8px rgba(0,0,0,.25);
        }
</style>

<h3>⚡ Wireless Charger Dashboard</h3>

<h5>
    <span class="status-dot @(IsConnected ? "online" : "offline")"></span>
    @(IsConnected ? "Connected" : "Disconnected")
</h5>

<div class="gui">

    <!-- ===== COLUMN 1 ===== -->
    <div>

        <div class="card">
            <div class="title">Set Point Control</div>

            <div class="row">
                <span class="label" data-desc="Điện áp DC yêu cầu gửi xuống bộ sạc (CAN 0x191)">
                    Voltage (V)
                </span>
                <div>
                    <input type="number" step="0.5" value="48"
                           disabled="@(!IsConnected)"
                           @onchange="OnVoltageChanged"
                           style="width:80px" />
                </div>
            </div>

            <div class="row">
                <span class="label" data-desc="Dòng DC yêu cầu – giới hạn dòng sạc">
                    Current (A)
                </span>
                <div>
                    <input type="number" step="0.5" value="10"
                           disabled="@(!IsConnected)"
                           @onchange="OnCurrentChanged"
                           style="width:80px" />
                </div>
            </div>

            <div style="margin-top:6px">
                <button disabled="@(!IsConnected)" @onclick="PowerOn">Power ON</button>
                <button disabled="@(!IsConnected)" @onclick="PowerOff">Power OFF</button>
                <button disabled="@(!IsConnected)" @onclick="ClearFault">Clear Fault</button>
            </div>
        </div>

        <div class="card">
            <div class="title">Measurements</div>

            <div class="row @(HasData ? "on" : "off")">
                <span class="label" data-desc="Điện áp DC đo được tại đầu ra">
                    Voltage
                </span>
                <div>@Fmt(Reader.Model?.Voltage_V) V</div>
            </div>

            <div class="row @(HasData ? "on" : "off")">
                <span class="label" data-desc="Dòng DC đo được tại đầu ra">
                    Current
                </span>
                <div>@Fmt(Reader.Model?.Current_A) A</div>
            </div>

            <div class="row @(HasData ? "on" : "off")">
                <span class="label" data-desc="Công suất DC = Voltage × Current">
                    Power
                </span>
                <div>@Fmt(Power) W</div>
            </div>
        </div>

        <div class="card">
            <div class="title">Gap & Temperature</div>

            <div class="row @GapClass">
                <span class="label" data-desc="Khoảng cách giữa TX và RX coil (mm)">
                    Gap
                </span>
                <div>@Fmt(Reader.Model?.Wireless?.Gap_mm) mm</div>
            </div>

            <div class="row @TempPriClass">
                <span class="label" data-desc="Nhiệt độ phía phát (TX)">
                    Temp Primary
                </span>
                <div>@Fmt(Reader.Model?.Temperature?.Primary_C) °C</div>
            </div>

            <div class="row @TempSecClass">
                <span class="label" data-desc="Nhiệt độ phía nhận (RX)">
                    Temp Secondary
                </span>
                <div>@Fmt(Reader.Model?.Temperature?.Secondary_C) °C</div>
            </div>
        </div>

    </div>

    <!-- ===== COLUMN 2 ===== -->
    <div>

        <div class="card">
            <div class="title">Status & Fault</div>

            @BoolState("Charging", Reader.Model?.Charging, "Đang truyền năng lượng")
            @FaultState("Fault", Reader.Model?.Fault == true, "Lỗi hệ thống tổng")
            @FaultState("OCP", Reader.Model?.Status?.Ocp == true, "Bảo vệ quá dòng")
            @FaultState("OVP", Reader.Model?.Status?.Ovp == true, "Bảo vệ quá áp")
            @FaultState("Watchdog", Reader.Model?.Status?.Watchdog == true, "Watchdog reset")
        </div>

        <div class="card">
            <div class="title">Wireless Flags</div>

            @BoolState("Wireless OK", Reader.Model?.WirelessStatusReport?.WirelessOk, "Kết nối wireless tốt")
            @BoolState("Under Current", Reader.Model?.WirelessStatusReport?.UnderCurrent, "Dòng thấp hơn ngưỡng")
        </div>

    </div>

    <!-- ===== COLUMN 3 ===== -->
    <div>

        <div class="card">
            <div class="title">Wireless Communication</div>

            <div class="row @(Reader.Model?.CommInfo != null ? "on" : "off")">
                <span class="label" data-desc="Kênh truyền wireless">
                    Channel
                </span>
                <div>@Reader.Model?.CommInfo?.Channel</div>
            </div>

            <div class="row @(Reader.Model?.CommInfo != null ? "on" : "off")">
                <span class="label" data-desc="ID giao tiếp wireless">
                    Comm ID
                </span>
                <div>@Reader.Model?.CommInfo?.CommId</div>
            </div>

            <div class="row @CommQualityClass">
                <span class="label" data-desc="Tỷ lệ gói tin truyền thành công">
                    Success Rate
                </span>
                <div>@FmtPct(Reader.Model?.CommInfo?.SuccessRate)</div>
            </div>
        </div>

    </div>
</div>

@code {
    bool IsConnected => Can.IsConnected;
    bool HasData => Reader.Model != null;
    double Power => (Reader.Model?.Voltage_V ?? 0) * (Reader.Model?.Current_A ?? 0);

    protected override void OnInitialized()
    {
        Writer.Update(cmd =>
        {
            cmd.DemandVoltage_V = 48;
            cmd.DemandCurrent_A = 10;
        });
        Reader.OnChange += Refresh;
    }

    void Refresh() => InvokeAsync(StateHasChanged);
    public void Dispose() => Reader.OnChange -= Refresh;

    RenderFragment BoolState(string t, bool? v, string desc)
        => @<div class="chk @(v == true ? "on" : "off")">
        <input type="checkbox" checked="@(v == true)" disabled />
        <span class="label" data-desc="@desc">@t</span>
    </div>;

    RenderFragment FaultState(string t, bool f, string desc)
        => @<div class="chk @(f ? "fault" : "off")">
        <input type="checkbox" checked="@f" disabled />
        <span class="label" data-desc="@desc">@t</span>
    </div>;

    string GapClass => Reader.Model?.Wireless?.Gap_mm switch
    { null => "off", > 20 => "fault", > 12 => "warn", _ => "on" };

    string TempPriClass => Reader.Model?.Temperature?.Primary_C switch
    { null => "off", > 90 => "fault", > 75 => "warn", _ => "on" };

    string TempSecClass => Reader.Model?.Temperature?.Secondary_C switch
    { null => "off", > 90 => "fault", > 75 => "warn", _ => "on" };

    string CommQualityClass => Reader.Model?.CommInfo?.SuccessRate switch
    { null => "off", < 0.90 => "fault", < 0.97 => "warn", _ => "on" };

    string Fmt(double? v) => v.HasValue ? v.Value.ToString("F1") : "--";
    string FmtPct(double? v) => v.HasValue ? (v.Value * 100).ToString("F1") + " %" : "--";

    void OnVoltageChanged(ChangeEventArgs e)
    {
        if (double.TryParse(e.Value?.ToString(), out var v))
            Writer.Update(cmd => cmd.DemandVoltage_V = v);
    }

    void OnCurrentChanged(ChangeEventArgs e)
    {
        if (double.TryParse(e.Value?.ToString(), out var a))
            Writer.Update(cmd => cmd.DemandCurrent_A = a);
    }

    async Task PowerOn()
    {
        Writer.Update(cmd =>
        {
            cmd.ClearFaults = true;
            cmd.PowerStage1 = false;
        });

        await Task.Delay(300);

        Writer.Update(cmd =>
        {
            cmd.ClearFaults = false;
            cmd.PowerStage1 = true; // 🔴 GIỮ LIÊN TỤC
        });
    }

    void PowerOff()
    {
        Writer.Update(cmd =>
        {
            cmd.PowerStage1 = false;
            for (int i = 0; i < cmd.PowerStages.Length; i++)
                cmd.PowerStages[i] = false;
        });
    }

    async Task ClearFault()
    {
        Writer.Update(cmd => cmd.ClearFaults = true);
        await Task.Delay(200);
        Writer.Update(cmd => cmd.ClearFaults = false);
    }
}
