@page "/"
@rendermode InteractiveServer

@using RemoteCR.Services.Can
@inject CanSocketReaderService Reader
@inject CanSocketWriterService Writer
@inject SocketCan Can
@implements IDisposable

<style>
    .status-dot {
        display: inline-block;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        margin-right: 6px;
    }

        .status-dot.online {
            background: #28a745;
            box-shadow: 0 0 8px #28a745;
        }

        .status-dot.offline {
            background: #dc3545;
            box-shadow: 0 0 8px #dc3545;
        }

    .gui {
        display: grid;
        grid-template-columns: 1fr 1fr 1.6fr;
        gap: 10px;
    }

    .card {
        background: #fff;
        border-radius: 8px;
        padding: 10px 12px;
        box-shadow: 0 0 8px rgba(0,0,0,.12);
        margin-bottom: 10px;
    }

    .title {
        font-weight: 600;
        font-size: .9rem;
        margin-bottom: 6px;
    }

    .row {
        display: grid;
        grid-template-columns: 130px 1fr;
        font-size: .8rem;
        align-items: center;
    }

        .row div {
            text-align: right;
            white-space: nowrap;
        }

    .chk {
        display: grid;
        grid-template-columns: 16px 1fr;
        font-size: .8rem;
        align-items: center;
        gap: 6px;
    }

    .on {
        color: #28a745;
        font-weight: 600;
    }

    .warn {
        color: #ffc107;
        font-weight: 600;
    }

    .fault {
        color: #dc3545;
        font-weight: 600;
    }

    .off {
        color: #999;
    }

    .label {
        position: relative;
        cursor: help;
        border-bottom: 1px dotted #aaa;
    }

        .label:hover::after {
            content: attr(data-desc);
            position: absolute;
            left: 0;
            top: 120%;
            background: #333;
            color: #fff;
            padding: 6px 8px;
            font-size: .75rem;
            border-radius: 4px;
            white-space: nowrap;
            z-index: 100;
            box-shadow: 0 2px 8px rgba(0,0,0,.25);
        }
</style>

<h3>⚡ Wireless Charger Dashboard</h3>

<h5>
    <span class="status-dot @(IsConnected ? "online" : "offline")"></span>
    @(IsConnected ? "Connected" : "Disconnected")
</h5>

<div class="gui">

    <!-- ===== COLUMN 1 ===== -->
    <div>
        <div class="card">
            <div class="title">Set Point Control</div>

            <div class="row">
                <span class="label" data-desc="Điện áp DC yêu cầu (CAN 0x191)">
                    Voltage (V)
                </span>
                <div>
                    <input type="number" step="0.5"
                           disabled="@(!IsConnected)"
                           @onchange="OnVoltageChanged"
                           value="@SetVoltage"
                           style="width:80px" />
                </div>
            </div>

            <div class="row">
                <span class="label" data-desc="Dòng DC giới hạn (CAN 0x191)">
                    Current (A)
                </span>
                <div>
                    <input type="number" step="0.5"
                           disabled="@(!IsConnected)"
                           @onchange="OnCurrentChanged"
                           value="@SetCurrent"
                           style="width:80px" />
                </div>
            </div>

            <div style="margin-top:6px">
                <button disabled="@(!IsConnected)" @onclick="PowerOn">Power ON</button>
                <button disabled="@(!IsConnected)" @onclick="PowerOff">Power OFF</button>
                <button disabled="@(!IsConnected)" @onclick="ClearFault">Clear Fault</button>
            </div>
        </div>

        <div class="card">
            <div class="title">Measurements</div>

            <div class="row @(HasData ? "on" : "off")">
                <span>Voltage</span>
                <div>@Fmt(Reader.Model?.Voltage_V) V</div>
            </div>

            <div class="row @(HasData ? "on" : "off")">
                <span>Current</span>
                <div>@Fmt(Reader.Model?.Current_A) A</div>
            </div>

            <div class="row @(HasData ? "on" : "off")">
                <span>Power</span>
                <div>@Fmt(Power) W</div>
            </div>
        </div>
    </div>

    <!-- ===== COLUMN 2 ===== -->
    <div>
        <div class="card">
            <div class="title">Status & Fault</div>

            @BoolState("Charging", Reader.Model?.Charging, "Đang truyền năng lượng")
            @FaultState("Fault", Reader.Model?.Fault == true, "Lỗi hệ thống tổng")
            @FaultState("OCP", Reader.Model?.Status?.Ocp == true, "Quá dòng")
            @FaultState("OVP", Reader.Model?.Status?.Ovp == true, "Quá áp")
            @FaultState("Watchdog", Reader.Model?.Status?.Watchdog == true, "Watchdog reset")
        </div>
    </div>

    <!-- ===== COLUMN 3 ===== -->
    <div>
        <div class="card">
            <div class="title">Wireless Communication</div>

            <div class="row">
                <span>Channel</span>
                <div>@Reader.Model?.CommInfo?.Channel</div>
            </div>

            <div class="row">
                <span>Comm ID</span>
                <div>@Reader.Model?.CommInfo?.CommId</div>
            </div>

            <div class="row @CommQualityClass">
                <span>Success Rate</span>
                <div>@FmtPct(Reader.Model?.CommInfo?.SuccessRate)</div>
            </div>
        </div>
    </div>
</div>

@code {
    // ===== STATE =====
    bool IsConnected => Can.IsConnected;
    bool HasData => Reader.Model != null;
    double Power => (Reader.Model?.Voltage_V ?? 0) * (Reader.Model?.Current_A ?? 0);

    // ===== SETPOINT =====
    double SetVoltage = 50;
    double SetCurrent = 10;

    // 🔴 MASTER ENABLE (BIT 20)
    bool PowerEnable = false;

    protected override void OnInitialized()
    {
        Writer.Update(cmd =>
        {
            cmd.DemandVoltage_V = SetVoltage;
            cmd.DemandCurrent_A = SetCurrent;
            cmd.PowerEnable = false;
            cmd.PowerStage1 = false;
        });

        Reader.OnChange += Refresh;
    }

    void Refresh() => InvokeAsync(StateHasChanged);
    public void Dispose() => Reader.OnChange -= Refresh;

    // ===== UI HELPERS =====
    RenderFragment BoolState(string t, bool? v, string desc)
        => @<div class="chk @(v == true ? "on" : "off")">
        <input type="checkbox" checked="@(v == true)" disabled />
        <span class="label" data-desc="@desc">@t</span>
    </div>;

    RenderFragment FaultState(string t, bool f, string desc)
        => @<div class="chk @(f ? "fault" : "off")">
        <input type="checkbox" checked="@f" disabled />
        <span class="label" data-desc="@desc">@t</span>
    </div>;

    string CommQualityClass => Reader.Model?.CommInfo?.SuccessRate switch
    {
        null => "off",
        < 0.90 => "fault",
        < 0.97 => "warn",
        _ => "on"
    };

    string Fmt(double? v) => v.HasValue ? v.Value.ToString("F1") : "--";
    string FmtPct(double? v) => v.HasValue ? (v.Value * 100).ToString("F1") + " %" : "--";

    // ===== SETPOINT CHANGE =====
    void OnVoltageChanged(ChangeEventArgs e)
    {
        if (double.TryParse(e.Value?.ToString(), out var v))
        {
            SetVoltage = v;
            Writer.Update(cmd =>
            {
                cmd.DemandVoltage_V = v;
                cmd.PowerEnable = PowerEnable;
            });
        }
    }

    void OnCurrentChanged(ChangeEventArgs e)
    {
        if (double.TryParse(e.Value?.ToString(), out var a))
        {
            SetCurrent = a;
            Writer.Update(cmd =>
            {
                cmd.DemandCurrent_A = a;
                cmd.PowerEnable = PowerEnable;
            });
        }
    }

    // ===== COMMANDS =====
    async Task PowerOn()
    {
        PowerEnable = true;

        Writer.Update(cmd =>
        {
            cmd.PowerEnable = true;
            cmd.ClearFaults = true;
            cmd.PowerStage1 = false;
        });

        await Task.Delay(300);

        Writer.Update(cmd =>
        {
            cmd.ClearFaults = false;
            cmd.PowerEnable = true;
            cmd.PowerStage1 = true;
        });
    }

    void PowerOff()
    {
        PowerEnable = false;

        Writer.Update(cmd =>
        {
            cmd.PowerEnable = false;
            cmd.PowerStage1 = false;
            for (int i = 0; i < cmd.PowerStages.Length; i++)
                cmd.PowerStages[i] = false;
        });
    }

    async Task ClearFault()
    {
        Writer.Update(cmd => cmd.ClearFaults = true);
        await Task.Delay(200);
        Writer.Update(cmd => cmd.ClearFaults = false);
    }
}
