@page "/counter"
@using RemoteCR.Services.Modbus
@rendermode InteractiveServer
@inject ModbusBackgroundService ModbusService

<h3 class="mb-4 fw-bold text-dark">📡 Trạng thái thiết bị RS-485</h3>

@if (state is null)
{
    <div class="alert alert-info d-flex align-items-center gap-2">
        <i class="bi bi-hourglass-split"></i> Đang chờ dữ liệu...
    </div>
}
else
{
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            <!-- ===== System Status ===== -->
            <div class="row mb-3">
                <div class="col-6">
                    <b>Heartbeat:</b>
                    <span class="badge bg-secondary rounded-pill ms-2">
                        @state.Heartbeat
                    </span>
                </div>

                <div class="col-6">
                    <b>Remote Ready:</b>
                    <span class="badge @(state.RemoteReady ? "bg-success" : "bg-danger") rounded-pill ms-2">
                        @(state.RemoteReady ? "YES" : "NO")
                    </span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <b>E-Stop:</b>
                    <span class="badge @(state.EStop ? "bg-danger" : "bg-success") rounded-pill ms-2">
                        @(state.EStop ? "YES" : "NO")
                    </span>
                </div>

                <div class="col-6">
                    <b>Enable:</b>
                    <span class="badge @(state.Enable ? "bg-success" : "bg-secondary") rounded-pill ms-2">
                        @(state.Enable ? "ON" : "OFF")
                    </span>
                </div>
            </div>

            @if (!state.RemoteReady)
            {
                <div class="alert alert-danger d-flex align-items-center gap-2 p-3 rounded-3 mb-4">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    Remote Controller NOT READY (mất kết nối tay cầm)
                </div>
            }

            <!-- ===== Mode ===== -->
            <div class="mb-4">
                <b>Mode:</b>
                <span class="badge bg-info text-dark rounded-pill ms-2">
                    @state.Mode
                </span>
            </div>

            <!-- ===== Digital Buttons ===== -->
            <div class="mb-4">
                <b>Nút bấm:</b>

                <div class="d-flex flex-wrap mt-2">
                    @RenderButton("Lift Up", state.LiftUp)
                    @RenderButton("Lift Down", state.LiftDown)
                    @RenderButton("Rotate Left", state.RotateLeft)
                    @RenderButton("Rotate Right", state.RotateRight)
                    @RenderButton("Mode Select", state.ModeSelect)
                    @RenderButton("Enable", state.Enable)
                </div>
            </div>

            <!-- ===== Joystick Analog ===== -->
            <div class="mb-4">
                <b>Joystick (Analog):</b>

                <div class="mt-3">
                    <label class="form-label fw-semibold">
                        Tiến / Lùi (Linear): @FormatAxis(state.Linear)
                    </label>
                    <div class="progress rounded-3" style="height: 22px;">
                        <div class="progress-bar bg-primary"
                             style="width:@AxisToPercent(state.Linear)%">
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <label class="form-label fw-semibold">
                        Trái / Phải (Angular): @FormatAxis(state.Angular)
                    </label>
                    <div class="progress rounded-3" style="height: 22px;">
                        <div class="progress-bar bg-warning"
                             style="width:@AxisToPercent(state.Angular)%">
                        </div>
                    </div>
                </div>
            </div>

            <!-- ===== Speed ===== -->
            <div class="mb-3">
                <label class="form-label fw-semibold">
                    Tốc độ: @(state.Speed * 100)%
                </label>
                <div class="progress rounded-3" style="height: 24px;">
                    <div class="progress-bar bg-info progress-bar-striped progress-bar-animated"
                         style="width:@(state.Speed * 100)%">
                        @(state.Speed * 100)%
                    </div>
                </div>
            </div>

        </div>
    </div>
}

<style>
    .badge-action {
        margin: 0.2rem;
        padding: 0.6rem 1rem;
        font-size: 0.9rem;
    }
</style>

@code {
    private DeviceState? state;

    protected override void OnInitialized()
    {
        ModbusService.OnStateChanged += s =>
        {
            state = s;
            InvokeAsync(StateHasChanged);
        };
    }

    private RenderFragment RenderButton(string label, bool isOn) => builder =>
    {
        builder.OpenElement(0, "span");

        var css = isOn
            ? "badge bg-success badge-action"
            : "badge bg-secondary badge-action";

        builder.AddAttribute(1, "class", css);
        builder.AddContent(2, label);

        builder.CloseElement();
    };

    private RenderFragment RenderActiveAction(string label, bool isActive) => builder =>
    {
        if (isActive)
        {
            builder.OpenElement(0, "span");
            builder.AddAttribute(1, "class", "badge bg-primary badge-action");
            builder.AddContent(2, label);
            builder.CloseElement();
        }
    };

    private bool AnyButtonPressed()
    {
        if (state == null) return false;
        return state.LiftUp || state.LiftDown ||
               state.RotateLeft || state.RotateRight ||
               state.ModeSelect;
    }

    private static string FormatAxis(float v)
        => v.ToString("0.00");

    private static int AxisToPercent(float v)
    {
        // v: -1 → +1  →  0% → 100%
        var p = (v + 1f) * 50f;
        return (int)Math.Clamp(p, 0, 100);
    }
}
